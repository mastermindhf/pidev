{% extends 'Back/back.html.twig' %}
{% block body %}

    <table class="table table-striped">
        {{ form_start(f) }}
        <tr>
            <td>{{ form_label(f.nom) }}</td>
            <td>{{ form_widget(f.nom) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(f.auteur) }}</td>
            <td>{{ form_widget(f.auteur) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(f.quantite) }}</td>
            <td>{{ form_widget(f.quantite) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(f.description) }}</td>
            <td>{{ form_widget(f.description) }}</td>
        </tr>
        <tr>
            <td >{{ form_label(f.type) }}</td>
            <td>{{ form_widget(f.type) }}</td>
        </tr>

        <tr>
        <td>{{ form_label(f.image) }}</td>
        <td>{{ form_widget(f.image) }}</td>
        </tr>
        <td></td>
        <td>{{ form_widget(f.Ajout , { 'attr': {'class': 'btn btn-info  '}} ) }}</td>
        {{ form_end(f) }}
    </table>

    <script>


        $('#bibliobundle_livres_quantite').keyup(function () {


            $.ajax({

                success: function (data) {
                    var x=$('#bibliobundle_livres_quantite').val();

                    if (x < 1  ) {
                        alert('err');


                        $('#bibliobundle_livres_Ajout').prop('disabled', true);

                    } else {

                        $('#bibliobundle_livres_Ajout').prop('disabled', false);
                    }
                }
            });


        });
</script>
    <script>
        $('#bibliobundle_livres_Ajout').onclick(function () {
            $.ajax({
                success: function (data) {
                    var x=$('#bibliobundle_livres_nom').val();
                    var y=$('#bibliobundle_livres_autheur').val();
                    if(x==null || y==null){
                        alert('err')
                    }else
                    alert('Livre '+x+' Ajouter ');
                    $('#bibliobundle_livres_Ajout').prop('disabled', true);
                }
            });
        });
    </script>
{% endblock %}