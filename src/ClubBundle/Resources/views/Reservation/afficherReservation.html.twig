{% extends 'Front/base.html.twig' %}

{% block title %}Afficher{% endblock %}

{% block reservation %}
    <br>
    <br>
    <br>
    <h1>Event Details</h1>

    <table border="1">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <th>ID Event</th>
        <th>Nom User</th>
        <th>Etat</th>
        <th>Confirmer</th>
        <th>Annuler</th>
        {% for r in reservation %}
        <tr>
            <td>
                {{ r.idEvent.id }}
            </td>
            <td>
                {{ r.idUser.nom }}
            </td>
            <td>
                {{ r.etat }}
            </td>
            <td>
                <center><a  class="fa fa-adjust" href="{{ path('_confirmer',{'id':r.id}) }}"></a></center>
            </td>
            <td>
                <center><a  class="fa fa-adn" href="{{ path('_annuler',{'id':r.id}) }}"></a></center>
            </td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}
