
{% extends 'Back/back.html.twig' %}
{% block body %}<br> <br>
<html>
<head>
    <title>Emploi du temps</title>

    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <style type="text/css">
        td { text-align: center; font: bold small Georgia, "Times New Roman", Times, serif }
        th { text-align: center; bgcolor:"#green"; font: bold small Georgia, "Times New Roman", Times, serif }
        h3 { text-align: center;   text-decoration: underline;}
    </style>
</head>

<body leftmargin="0" topmargin="0" marginwidth="0" marginheight="0">

<br>
<h3 >Emploi du temps de : {{ p.prof.nom }} </h3>
<br>
<table  width="100%"  cellspacing="0" >
    <tr>

        <td bgcolor="#a9a9a9"> lundi </td>
        <td bgcolor="#a9a9a9"> mardi</td>
        <td bgcolor="#a9a9a9"> mercredi</td>
        <td bgcolor="#a9a9a9"> jeudi</td>
        <td bgcolor="#a9a9a9"> vendredi</td>
    </tr>

    {% for ee in e %}
        <tr >

            <td bgcolor="#adff2f">
                {% if ee.jour.id==1%}


                    {{ ee.heure.libelle }} <br>
                    salle  {{ ee.classe.libelle }} <br><br><br>



                {% endif %}
            </td>


            <td bgcolor="#ffc0cb">
                {% if ee.jour.id==2 %}

                    {{ ee.heure.libelle }} <br>
                    salle  {{ ee.classe.libelle }} <br>
                {% endif %}
            </td>
            <td bgcolor="#b0c4de">
                {% if ee.jour.id==3%}

                    {{ ee.heure.libelle }} <br>
                    salle   {{ ee.classe.libelle }} <br>
                {% endif %}
            </td>

            <td bgcolor="#f5deb3">

                {% if ee.jour.id==4%}
                    {{ ee.heure.libelle }} <br>
                    salle    {{ ee.classe.libelle }} <br>
                {% endif %}
            </td>

            <td bgcolor="#fffacd" >
                {% if ee.jour.id==5%}

                    {{ ee.heure.libelle }} <br>
                    salle   {{ ee.classe.libelle }} <br>
                {% endif %}

            </td>

            {% endfor %}
        </tr>


</table>
<script type="text/javascript">
    function imprimer_page(){
        window.print();
    }
</script>


<form>
    <input id="impression" name="impression" type="button" onclick="imprimer_page()" value="Imprimer emploi" />
</form>



<link rel="stylesheet" href="{{ asset ('Back/css/p
css')}}" type="text/css" media="print" />
</body>

{% endblock %}